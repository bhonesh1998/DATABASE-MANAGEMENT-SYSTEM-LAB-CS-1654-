insert into Account_Master values(5,'Darwin',1700);
declare
j number(10);
a number(5);
begin
a:=&a;
select balance into j from Account_Master where acct_no=a;
if j<1000 then
j:=j-100;
end if;
update Account_Master set balance=j where acct_no=a;
end;
/
